<!-- Change this into a bootstrap form -->
<!-- Use bootstrap select for all select boxes -->
<!-- https://silviomoreto.github.io/bootstrap-select/ -->

<%= form_for(intervention) do |f| %>
  <% if intervention.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>

      <ul>
      <% intervention.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Concern</h3>
  <!-- Change to select -->
  <div class="field">
    <%= f.label :concern %>
    <%= f.text_field :concern %>
  </div>

  <!-- Change to multi-select -->
  <div class="field">
    <%= f.label :sub_concern %>
    <%= f.text_field :sub_concern %>
  </div>

  <!-- Change to multi-select -->
  <div class="field">
    <%= f.label :where %>
    <%= f.text_field :where %>
  </div>

  <!-- Change to multi-select -->
  <div class="field">
    <%= f.label :when %>
    <%= f.text_field :when %>
  </div>

  <!-- Change to select -->
  <div class="field">
    <%= f.label :frequency %>
    <%= f.text_field :frequency %>
  </div>

  <h3>Intervention</h3>
  <!-- Format to Bootstrap Date Picker (no time) -->
  <!-- https://bootstrap-datepicker.readthedocs.io/en/latest/ -->
  <div class="field">
    <%= f.label :follow_up %>
    <%= f.date_select :follow_up %>
  </div>

  <!-- Change to select -->
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <!-- Change to select -->
  <div class="field">
    <%= f.label :goal %>
    <%= f.text_area :goal %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
